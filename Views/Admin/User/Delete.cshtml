@model FastFoodShop.Domain.Entities.User
@{
    ViewData["Title"] = "Xóa Người dùng - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/admin-styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css?t=@DateTime.Now.Ticks" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Quản lý Người dùng</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="User" asp-action="Index">Người dùng</a>
                        </li>
                        <li class="breadcrumb-item active">Xóa</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="d-flex justify-content-between">
                                    <h3>Xóa người dùng (Mã: @Model.Id)</h3>
                                </div>

                                <hr />

                                <div class="alert alert-danger">
                                    Bạn có chắc chắn muốn xóa người dùng này?
                                </div>

                                <p><strong>Email:</strong> @Model.Email</p>
                                <p><strong>Họ tên:</strong> @Model.FullName</p>
                                <p><strong>Vai trò:</strong> @Model.Role?.Name</p>

                                <form asp-controller="User" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input asp-for="Id" type="hidden" />
                                    <button type="submit" class="btn btn-danger">Xác nhận</button>
                                    <a asp-controller="User" asp-action="Index"
                                        class="btn btn-secondary ms-2">Hủy</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
@model IEnumerable<FastFoodShop.Domain.Entities.User>
@{
    ViewData["Title"] = "Dashboard - FastFood Shop";
    Layout = null; // tá»± include header/sidebar/footer

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Manage Users</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">Users</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="d-flex justify-content-between mb-3">
                                    <h3>Table users</h3>
                                    <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                                        Create a user
                                    </a>
                                </div>

                                <hr />
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Email</th>
                                            <th>Full Name</th>
                                            <th>Role</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var user in Model)
                                            {
                                                <tr>
                                                    <td>@user.Id</td>
                                                    <td>@user.Email</td>
                                                    <td>@user.FullName</td>
                                                    <td>@user.Role?.Name</td>
                                                    <td>
                                                        <a asp-controller="User" asp-action="Detail"
                                                            asp-route-id="@user.Id" class="btn btn-success btn-sm">View</a>
                                                        <a asp-controller="User" asp-action="Update"
                                                            asp-route-id="@user.Id"
                                                            class="btn btn-warning btn-sm mx-2">Update</a>
                                                        <a asp-controller="User" asp-action="Delete"
                                                            asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center">No users found.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <!-- Pagination -->
                                <nav aria-label="User pagination">
                                    <ul class="pagination justify-content-center">
                                        <!-- Previous -->
                                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                                            <a class="page-link" asp-controller="User"
                                                asp-action="Index" asp-route-page="@(currentPage - 1)"
                                                aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>

                                        @for (int i = 1; i <= totalPages; i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" asp-controller="User"
                                                    asp-action="Index" asp-route-page="@i">@i</a>
                                            </li>
                                        }

                                        <!-- Next -->
                                        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                                            <a class="page-link" asp-controller="User"
                                                asp-action="Index" asp-route-page="@(currentPage + 1)"
                                                aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
@model FastFoodShop.Domain.Entities.User
@{
    ViewData["Title"] = "Tạo Người dùng - FastFood Shop";
    Layout = null;
    Func<string, string> invalid = name =>
    (ViewData.ModelState.TryGetValue(name, out var e) && e.Errors.Count > 0) ? "is-invalid" : "";
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/admin-styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css?t=@DateTime.Now.Ticks" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            avatarFile.on("change", (e) => {
                const file = e.target.files?.[0];
                if (!file) return;
                const url = URL.createObjectURL(file);
                $("#avatarPreview").attr("src", url).css("display", "block");
            });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Quản lý Người dùng</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="User" asp-action="Index">Người dùng</a>
                        </li>
                        <li class="breadcrumb-item active">Tạo mới</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">

                            <div class="col-md-6 col-12 mx-auto">
                                <h3>Tạo người dùng mới</h3>
                                <hr />

                                <!-- Summary lỗi -->
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <form asp-controller="User" asp-action="Create" method="post"
                                    enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
                                    @Html.AntiForgeryToken()

                                    <div class="col-12 col-md-6">
                                        <label asp-for="Email" class="form-label"></label>
                                        <input asp-for="Email" class="form-control @(invalid(nameof(Model.Email)))" />
                                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label asp-for="Password" class="form-label"></label>
                                        <input asp-for="Password" type="password"
                                            class="form-control @(invalid(nameof(Model.Password)))" />
                                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label asp-for="Phone" class="form-label">Số điện thoại</label>
                                        <input asp-for="Phone" class="form-control @(invalid(nameof(Model.Phone)))" />
                                        <span asp-validation-for="Phone" class="invalid-feedback"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label asp-for="FullName" class="form-label"></label>
                                        <input asp-for="FullName"
                                            class="form-control @(invalid(nameof(Model.FullName)))" />
                                        <span asp-validation-for="FullName" class="invalid-feedback"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Address" class="form-label"></label>
                                        <input asp-for="Address"
                                            class="form-control @(invalid(nameof(Model.Address)))" />
                                        <span asp-validation-for="Address" class="invalid-feedback"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label asp-for="RoleId" class="form-label">Vai trò</label>
                                        <select asp-for="RoleId" class="form-select @(invalid(nameof(Model.RoleId)))">
                                            <option value="">-- chọn vai trò --</option>
                                            <option value="1">ADMIN</option>
                                            <option value="2">USER</option>
                                        </select>
                                        <span asp-validation-for="RoleId" class="invalid-feedback"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label for="avatarFile" class="form-label">Ảnh đại diện</label>
                                        <input class="form-control @(invalid(nameof(Model.Avatar)))" type="file"
                                            id="avatarFile" accept=".png, .jpg, .jpeg" name="avatarFile" />
                                        <span asp-validation-for="Avatar" class="invalid-feedback"></span>
                                    </div>


                                    <div class="col-12">
                                        <img style="max-height: 250px; display: none;" alt="avatar preview"
                                            id="avatarPreview" />
                                    </div>

                                    <div class="col-12 mb-5">
                                        <button type="submit" class="btn btn-primary">Tạo mới</button>
                                    </div>
                                </form>

                                <!-- Nếu bạn đã có _ValidationScriptsPartial, dùng dòng dưới: -->
                                @* <partial name="_ValidationScriptsPartial" /> *@

                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>

    <!-- Nếu dự án CHƯA có _ValidationScriptsPartial, chèn 2 script này -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"
        integrity="sha512-rstIgDs0xPgmG6RXCwD3B0ZsM8j2B3SLS7nCp1H8RB31i5lGmG6Z1dGqv7f4aV1Qe+8pGLvYk5WvQFqkj9S0Vg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"
        integrity="sha512-4mXwGq5ZgJdAQq5I8v1oHk2q7+8w7c6y4r1a8W2nH2u0m0iZ7Q7Bf8bI9Z8x4y7Q6yCw4RZQ8iC7k3r3sC2D2Q=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/js/scripts.js"></script>
</body>

</html>
@model IEnumerable<FastFoodShop.Domain.Entities.Category>
@{
    ViewData["Title"] = "Danh mục - FastFood Shop";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css?t=@DateTime.Now.Ticks" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
@await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")
<div id="layoutSidenav">
@await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")
<div id="layoutSidenav_content">
<main>
<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Danh mục</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
        </li>
        <li class="breadcrumb-item active">Danh mục</li>
    </ol>
    <a class="btn btn-primary mb-3" asp-controller="Category" asp-action="Create">
        <i class="fas fa-plus me-2"></i>Tạo danh mục mới
    </a>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                    <td>
                        @if (c.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ngừng hoạt động</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@c.Id">
                            <i class="fas fa-edit me-1"></i>Sửa
                        </a>
                        <a class="btn btn-sm btn-danger" asp-controller="Category" asp-action="DeleteConfirm" asp-route-id="@c.Id">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-4">
                    <i class="fas fa-folder-open fa-2x mb-2"></i>
                    <div>Chưa có danh mục nào</div>
                    <small>Hãy tạo danh mục đầu tiên cho cửa hàng của bạn</small>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</main>
@await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
</div>
</div>
</body>
</html>
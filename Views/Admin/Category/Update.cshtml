@model FastFoodShop.Domain.Entities.Category
@{
    ViewData["Title"] = "Cập nhật Danh mục - FastFood Shop";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
@await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")
<div id="layoutSidenav">
@await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")
<div id="layoutSidenav_content">
<main>
<div class="container-fluid px-4">
    <h1 class="mt-4">Cập nhật Danh mục</h1>
    <form method="post" asp-controller="Category" asp-action="Update" class="row g-3">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        <div class="col-md-6">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-auto">
            <label asp-for="IsActive" class="form-label">Trạng thái</label>
            <select asp-for="IsActive" class="form-select w-auto" style="min-width: 120px;">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>
        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-warning">Cập nhật</button>
        </div>
    </form>
</div>
</main>
@await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
</div>
</div>
</body>
</html>
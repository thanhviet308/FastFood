@model FastFoodShop.Domain.Entities.Product
@{
    ViewData["Title"] = "Delete Product - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Products</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Product" asp-action="Index">Product</a>
                        </li>
                        <li class="breadcrumb-item active">Delete</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="d-flex justify-content-between">
                                    <h3>Delete the product</h3>
                                </div>
                                <hr />

                                <div class="alert alert-danger">
                                    Are you sure you want to delete this product?
                                </div>

                                <!-- Hiển thị thông tin chi tiết sản phẩm -->
                                <p><strong>Product ID:</strong> @Model.Id</p>
                                <p><strong>Name:</strong> @Model.Name</p>
                                <p><strong>Category:</strong> @(Model.Category?.Name ?? "-")</p>
                                <p><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>

                                <!-- Form Delete -->
                                <form asp-area="Admin" asp-controller="Product" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input asp-for="Id" type="hidden" />
                                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                                    <a asp-controller="Product" asp-action="Index"
                                        class="btn btn-secondary ms-2">Cancel</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
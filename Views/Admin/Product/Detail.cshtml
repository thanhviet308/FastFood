@model FastFoodShop.Domain.Entities.Product
@{
    ViewData["Title"] = "Chi tiết Sản phẩm - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/admin-styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css?t=@DateTime.Now.Ticks" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Sản phẩm</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>
                        <li class="breadcrumb-item active">Xem chi tiết</li>
                    </ol>

                    <div class="container mt-5">
                        <div class="row">
                            <div class="col-12 col-xl-10 mx-auto">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                    <h3 class="mb-0">Chi tiết sản phẩm (Mã: @Model.Id)</h3>
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                                    </a>
                                </div>

                                <hr />

                                <div class="row g-4">
                                    <div class="col-lg-5">
                                        <div class="card shadow-sm">
                                            @if (!string.IsNullOrEmpty(Model.Image))
                                            {
                                                <img class="card-img-top img-fluid" style="max-height: 350px; object-fit: cover;"
                                                     src="~/images/product/@Model.Image"
                                                     asp-append-version="true" alt="@Model.Name" />
                                            }
                                            else
                                            {
                                                <img class="card-img-top img-fluid" style="max-height: 350px; object-fit: cover;"
                                                     src="https://placehold.co/600x400?text=Không+có+ảnh"
                                                     alt="@Model.Name" />
                                            }
                                        </div>
                                    </div>

                                    <div class="col-lg-7">
                                        <div class="card shadow-sm h-100">
                                    <div class="card-header">
                                                <h5 class="mb-0">Thông tin sản phẩm</h5>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                                <li class="list-group-item"><strong>Mã:</strong> @Model.Id</li>
                                                <li class="list-group-item"><strong>Tên:</strong> @Model.Name</li>
                                                <li class="list-group-item">
                                                    <strong>Danh mục:</strong> @(ViewBag.CategoryName ?? Model.Category?.Name ?? "Không xác định")
                                                </li>
                                                <li class="list-group-item">
                                                    <strong>Trạng thái:</strong>
                                                    @(Model.IsActive ? "Hoạt động" : "Không hoạt động")
                                                </li>
                                                <li class="list-group-item">
                                                    <strong>Mô tả ngắn:</strong>
                                                    <div class="mt-1 text-muted">@Model.ShortDesc</div>
                                                </li>
                                                <li class="list-group-item">
                                                    <strong>Mô tả chi tiết:</strong>
                                                    <div class="mt-1 text-muted">@Model.DetailDesc</div>
                                                </li>
                                    </ul>
                                </div>
                                    </div>
                                </div>

                                <div class="card mt-4 shadow-sm">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">Biến thể</h5>
                                        <span class="badge bg-secondary">
                                            Tổng: @(((IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants ?? Enumerable.Empty<FastFoodShop.Domain.Entities.ProductVariant>()).Count())
                                        </span>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Tên</th>
                                                    <th>Giá</th>
                                                    <th>Tồn kho</th>
                                                    <th>Trạng thái</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var v in (IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants ?? Enumerable.Empty<FastFoodShop.Domain.Entities.ProductVariant>())
                                                {
                                                    <tr>
                                                        <td>@v.VariantName</td>
                                                        <td>@string.Format("{0:N0} đ", v.Price)</td>
                                                        <td>@v.Stock</td>
                                                        <td>
                                                            <span class="badge @(v.IsActive ? "bg-success" : "bg-secondary")">
                                                                @(v.IsActive ? "Hoạt động" : "Không hoạt động")
                                                            </span>
                                                        </td>
                                                    </tr>
                                                }
                                                @if (ViewBag.Variants == null || !((IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants).Any())
                                                {
                                                    <tr>
                                                        <td colspan="4" class="text-center text-muted py-4">
                                                            Chưa có biến thể nào cho sản phẩm này.
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
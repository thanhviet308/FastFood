@model FastFoodShop.Domain.Entities.Product
@{
    ViewData["Title"] = "Update Product - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            const orgImage = "@Model.Image";

            if (orgImage) {
                const urlImage = "/images/product/" + orgImage;
                $("#avatarPreview").attr("src", urlImage);
                $("#avatarPreview").css({ "display": "block" });
            }

            avatarFile.change(function (e) {
                const imgURL = URL.createObjectURL(e.target.files[0]);
                $("#avatarPreview").attr("src", imgURL);
                $("#avatarPreview").css({ "display": "block" });
            });
        });
    </script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Products</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Product" asp-action="Index">Product</a>
                        </li>
                        <li class="breadcrumb-item active">Update</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-6 col-12 mx-auto">
                                <h3>Update a product</h3>
                                <hr />

                                <form asp-controller="Product" asp-action="Update" method="post"
                                    enctype="multipart/form-data" class="row">
                                    @Html.AntiForgeryToken()
                                    <input asp-for="Id" type="hidden" />

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="Name" class="form-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    </div>

                                    

                                    <div class="mb-3 col-12">
                                        <label asp-for="DetailDesc" class="form-label"></label>
                                        <textarea asp-for="DetailDesc" class="form-control"></textarea>
                                        <span asp-validation-for="DetailDesc" class="invalid-feedback"></span>
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="ShortDesc" class="form-label"></label>
                                        <input asp-for="ShortDesc" class="form-control" />
                                        <span asp-validation-for="ShortDesc" class="invalid-feedback"></span>
                                    </div>

                                    

                                    

                                    

                                    <div class="mb-3 col-12 col-md-6">
                                        <label class="form-label">Category</label>
        
                                        <select class="form-select" name="CategoryId">
                                            <option value="">-- chọn category --</option>
                                            @foreach (var c in (IEnumerable<FastFoodShop.Domain.Entities.Category>)ViewBag.Categories ?? Enumerable.Empty<FastFoodShop.Domain.Entities.Category>())
                                            {
                                                <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">@c.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label class="form-label">Kích hoạt</label>
                                        <input type="checkbox" class="form-check-input" name="IsActive" @(Model.IsActive ? "checked" : "") />
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label for="avatarFile" class="form-label">Image:</label>
                                        <input class="form-control" type="file" id="avatarFile"
                                            accept=".png, .jpg, .jpeg" name="nhatraicayFile" />
                                    </div>

                                    <div class="col-12 mb-3">
                                        <img style="max-height: 250px; display: none;" alt="avatar preview"
                                            id="avatarPreview" />
                                    </div>

                                    <div class="col-12 mb-5">
                                        <button type="submit" class="btn btn-warning">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12 mx-auto">
                                <h4>Variants</h4>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>Active</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var v in (IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants ?? Enumerable.Empty<FastFoodShop.Domain.Entities.ProductVariant>())
                                        {
                                            <tr>
                                                <form method="post" asp-controller="Product" asp-action="UpdateVariant">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@v.Id" />
                                                    <input type="hidden" name="productId" value="@Model.Id" />
                                                    <td><input class="form-control" name="variantName" value="@v.VariantName" /></td>
                                                    <td><input class="form-control" name="price" type="number" value="@v.Price" /></td>
                                                    <td>
                                                        <input type="checkbox" name="isActive" value="true" @(v.IsActive ? "checked" : "") />
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-primary" type="submit">Save</button>
                                                        <form method="post" asp-controller="Product" asp-action="DeleteVariant" style="display:inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@v.Id" />
                                                            <input type="hidden" name="productId" value="@Model.Id" />
                                                            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                                        </form>
                                                    </td>
                                                </form>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <h5 class="mt-3">Add variant</h5>
                                <form method="post" asp-controller="Product" asp-action="AddVariant" class="row g-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@Model.Id" />
                                    <div class="col-md-4">
                                        <input name="variantName" class="form-control" placeholder="Name" />
                                    </div>
                                    <div class="col-md-4">
                                        <input name="price" class="form-control" type="number" placeholder="Price" />
                                    </div>
                                    <div class="col-md-4">
                                        <button class="btn btn-success" type="submit">Add</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
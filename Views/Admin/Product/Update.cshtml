@model FastFoodShop.Domain.Entities.Product
@{
    ViewData["Title"] = "Cập nhật Sản phẩm - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/admin-styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css?t=@DateTime.Now.Ticks" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        $(document).ready(() => {
            const imageFileInput = $("#imageFile");
            const orgImage = "@Model.Image";

            if (orgImage) {
                const urlImage = "/images/product/" + orgImage;
                $("#avatarPreview").attr("src", urlImage);
                $("#avatarPreview").css({ "display": "block" });
            }

            imageFileInput.on("change", function (e) {
                const file = e.target.files?.[0];
                if (!file) {
                    if (orgImage) {
                        $("#avatarPreview").attr("src", "/images/product/" + orgImage);
                    } else {
                        $("#avatarPreview").css({ "display": "none" });
                    }
                    return;
                }

                const imgURL = URL.createObjectURL(file);
                $("#avatarPreview").attr("src", imgURL).css({ "display": "block" });
            });
        });
    </script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Sản phẩm</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>
                        <li class="breadcrumb-item active">Cập nhật</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-6 col-12 mx-auto">
                                <h3>Cập nhật sản phẩm</h3>
                                <hr />

                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <form action="/admin/products/update" method="post"
                                    enctype="multipart/form-data" class="row">
                                    @Html.AntiForgeryToken()
                                    <input asp-for="Id" type="hidden" />
                                    <input asp-for="Image" type="hidden" />

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="Name" class="form-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    

                                    <div class="mb-3 col-12">
                                        <label asp-for="DetailDesc" class="form-label"></label>
                                        <textarea asp-for="DetailDesc" class="form-control"></textarea>
                                        <span asp-validation-for="DetailDesc" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="ShortDesc" class="form-label"></label>
                                        <input asp-for="ShortDesc" class="form-control" />
                                        <span asp-validation-for="ShortDesc" class="text-danger"></span>
                                    </div>

                                    

                                    

                                    

                                    <div class="mb-3 col-12 col-md-6">
                                        <label class="form-label">Danh mục</label>
        
                                        <select class="form-select" name="CategoryId">
                                            <option value="">-- chọn danh mục --</option>
                                            @foreach (var c in (IEnumerable<FastFoodShop.Domain.Entities.Category>)ViewBag.Categories ?? Enumerable.Empty<FastFoodShop.Domain.Entities.Category>())
                                            {
                                                <option value="@c.Id" selected="@(Model.CategoryId == c.Id ? "selected" : null)">@c.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="mb-3 col-auto">
                                        <label asp-for="IsActive" class="form-label">Trạng thái</label>
                                        <select asp-for="IsActive" class="form-select w-auto" style="min-width: 120px;">
                                            <option value="true">Hoạt động</option>
                                            <option value="false">Ngừng hoạt động</option>
                                        </select>
                                    </div>

                                    <div class="mb-3 col-auto">
                                        <label asp-for="IsFeatured" class="form-label">Nổi bật</label>
                                        <select asp-for="IsFeatured" class="form-select w-auto" style="min-width: 120px;">
                                            @if (Model.IsFeatured)
                                            {
                                                <option value="true" selected>Có</option>
                                                <option value="false">Không</option>
                                            }
                                            else
                                            {
                                                <option value="true">Có</option>
                                                <option value="false" selected>Không</option>
                                            }
                                        </select>
                                        
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label for="imageFile" class="form-label">Ảnh</label>
                                        <input class="form-control" type="file" id="imageFile"
                                            accept=".png, .jpg, .jpeg" name="imageFile" />
                                    </div>

                                    <div class="col-12 mb-3">
                                        <img style="max-height: 250px; display: none;" alt="avatar preview"
                                            id="avatarPreview" />
                                    </div>

                                    <div class="col-12 mb-5">
                                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Product Variants Management -->
                        <div class="row mt-5">
                            <div class="col-md-8 col-12 mx-auto">
                                <h3>Quản lý biến thể</h3>
                                <hr />

                                @if (TempData["VariantError"] != null)
                                {
                                    <div class="alert alert-danger">@TempData["VariantError"]</div>
                                }
                                @if (TempData["VariantSuccess"] != null)
                                {
                                    <div class="alert alert-success">@TempData["VariantSuccess"]</div>
                                }

                                <!-- Add New Variant Form -->
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">Thêm biến thể mới</h5>
                                    </div>
                                    <div class="card-body">
                                        <form action="/admin/products/variant/add" method="post" class="row">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@Model.Id" />
                                            
                                            <div class="col-md-4">
                                                <label class="form-label">Tên biến thể</label>
                                                <input type="text" name="variantName" class="form-control" placeholder="VD: Size M, Large, Small..." required />
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <label class="form-label">Giá</label>
                                                <input type="number" name="price" class="form-control" step="0.01" min="0" placeholder="0" required />
                                            </div>
                                            
                                            <div class="col-md-4 d-flex align-items-end">
                                                <button type="submit" class="btn btn-primary">Thêm biến thể</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <!-- Existing Variants List -->
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Danh sách biến thể</h5>
                                    </div>
                                    <div class="card-body">
                                        @if (ViewBag.Variants != null && ((IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants).Any())
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>Tên biến thể</th>
                                                            <th>Giá</th>
                                                            <th>Trạng thái</th>
                                                            <th>Thao tác</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var variant in (IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants)
                                                        {
                                                            <tr>
                                                                <td>@variant.VariantName</td>
                                                                <td>@string.Format("{0:N0} đ", variant.Price)</td>
                                                                <td>
                                                                    @if (variant.IsActive)
                                                                    {
                                                                        <span class="badge bg-success">Hoạt động</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-secondary">Không hoạt động</span>
                                                                    }
                                                                </td>
                                                                <td class="d-flex flex-wrap gap-2">
                                                                    <button type="button"
                                                                            class="btn btn-sm btn-info edit-variant-btn"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#editVariantModal"
                                                                            data-variant-id="@variant.Id"
                                                                            data-variant-name="@variant.VariantName"
                                                                            data-variant-price="@variant.Price"
                                                                            data-variant-active="@(variant.IsActive.ToString().ToLower())">
                                                                        <i class="fas fa-pen me-1"></i>Sửa
                                                                    </button>
                                                                    <form action="/admin/products/variant/update" method="post" class="d-inline">
                                                                        @Html.AntiForgeryToken()
                                                                        <input type="hidden" name="id" value="@variant.Id" />
                                                                        <input type="hidden" name="productId" value="@Model.Id" />
                                                                        <input type="hidden" name="variantName" value="@variant.VariantName" />
                                                                        <input type="hidden" name="price" value="@variant.Price" />
                                                                        <input type="hidden" name="isActive" value="@(!variant.IsActive)" />
                                                                        <button type="submit" class="btn btn-sm @(variant.IsActive ? "btn-warning" : "btn-success")">
                                                                            @(variant.IsActive ? "Ngừng hoạt động" : "Kích hoạt")
                                                                        </button>
                                                                    </form>
                                                                    
                                                                    <form action="/admin/products/variant/delete" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa biến thể này?');">
                                                                        @Html.AntiForgeryToken()
                                                                        <input type="hidden" name="id" value="@variant.Id" />
                                                                        <input type="hidden" name="productId" value="@Model.Id" />
                                                                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-info">
                                                <i class="fas fa-info-circle"></i> Chưa có biến thể nào cho sản phẩm này.
                                            </div>
                                        }
                                    </div>
                                </div>
                        </div>
                    </div>

                    <!-- Edit Variant Modal -->
                    <div class="modal fade" id="editVariantModal" tabindex="-1" aria-labelledby="editVariantModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editVariantModalLabel">Chỉnh sửa biến thể</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                </div>
                                <form action="/admin/products/variant/update" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="modal-body">
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <input type="hidden" name="id" id="editVariantId" />

                                        <div class="mb-3">
                                            <label for="editVariantName" class="form-label">Tên biến thể</label>
                                            <input type="text" class="form-control" id="editVariantName" name="variantName" required />
                                        </div>

                                        <div class="mb-3">
                                            <label for="editVariantPrice" class="form-label">Giá</label>
                                            <input type="number" class="form-control" id="editVariantPrice" name="price" min="0" step="1000" required />
                                        </div>

                                        <div class="mb-3">
                                            <label for="editVariantStatus" class="form-label">Trạng thái</label>
                                            <select class="form-select" id="editVariantStatus" name="isActive">
                                                <option value="true">Hoạt động</option>
                                                <option value="false">Không hoạt động</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const editVariantModal = document.getElementById('editVariantModal');
            if (!editVariantModal) return;

            editVariantModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                if (!button) return;

                const id = button.getAttribute('data-variant-id');
                const name = button.getAttribute('data-variant-name');
                const price = button.getAttribute('data-variant-price');
                const isActive = button.getAttribute('data-variant-active') === 'true' ? 'true' : 'false';

                document.getElementById('editVariantId').value = id ?? '';
                document.getElementById('editVariantName').value = name ?? '';
                document.getElementById('editVariantPrice').value = price ?? 0;
                document.getElementById('editVariantStatus').value = isActive;
            });
        });
    </script>
    @await Html.PartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml")
</body>

</html>
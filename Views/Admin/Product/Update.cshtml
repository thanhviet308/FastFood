@model FastFoodShop.Domain.Entities.Product
@{
    ViewData["Title"] = "Update Product - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            const orgImage = "@Model.Image";

            if (orgImage) {
                const urlImage = "/images/product/" + orgImage;
                $("#avatarPreview").attr("src", urlImage);
                $("#avatarPreview").css({ "display": "block" });
            }

            avatarFile.change(function (e) {
                const imgURL = URL.createObjectURL(e.target.files[0]);
                $("#avatarPreview").attr("src", imgURL);
                $("#avatarPreview").css({ "display": "block" });
            });
        });
    </script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Sản phẩm</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>
                        <li class="breadcrumb-item active">Cập nhật</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-6 col-12 mx-auto">
                                <h3>Cập nhật sản phẩm</h3>
                                <hr />

                                <form asp-controller="Product" asp-action="Update" method="post"
                                    enctype="multipart/form-data" class="row">
                                    @Html.AntiForgeryToken()
                                    <input asp-for="Id" type="hidden" />

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="Name" class="form-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    </div>

                                    

                                    <div class="mb-3 col-12">
                                        <label asp-for="DetailDesc" class="form-label"></label>
                                        <textarea asp-for="DetailDesc" class="form-control"></textarea>
                                        <span asp-validation-for="DetailDesc" class="invalid-feedback"></span>
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="ShortDesc" class="form-label"></label>
                                        <input asp-for="ShortDesc" class="form-control" />
                                        <span asp-validation-for="ShortDesc" class="invalid-feedback"></span>
                                    </div>

                                    

                                    

                                    

                                    <div class="mb-3 col-12 col-md-6">
                                        <label class="form-label">Danh mục</label>
        
                                        <select class="form-select" name="CategoryId">
                                            <option value="">-- chọn category --</option>
                                            @foreach (var c in (IEnumerable<FastFoodShop.Domain.Entities.Category>)ViewBag.Categories ?? Enumerable.Empty<FastFoodShop.Domain.Entities.Category>())
                                            {
                                                <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">@c.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="mb-3 col-auto">
                                        <label asp-for="IsActive" class="form-label">Trạng thái</label>
                                        <select asp-for="IsActive" class="form-select w-auto" style="min-width: 120px;">
                                            <option value="true">True</option>
                                            <option value="false">False</option>
                                        </select>
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label for="avatarFile" class="form-label">Ảnh</label>
                                        <input class="form-control" type="file" id="avatarFile"
                                            accept=".png, .jpg, .jpeg" name="nhatraicayFile" />
                                    </div>

                                    <div class="col-12 mb-3">
                                        <img style="max-height: 250px; display: none;" alt="avatar preview"
                                            id="avatarPreview" />
                                    </div>

                                    <div class="col-12 mb-5">
                                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12 mx-auto">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center justify-content-between">
                                        <span>Biến thể</span>
                                        <form method="post" asp-controller="Product" asp-action="AddVariant" class="d-flex align-items-center gap-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@Model.Id" />
                                            <input name="variantName" class="form-control form-control-sm" placeholder="Tên" style="max-width: 220px;" required />
                                            <input name="price" class="form-control form-control-sm" type="number" placeholder="Giá" style="max-width: 160px;" min="0" step="1" required />
                                            <button class="btn btn-success btn-sm" type="submit">Thêm</button>
                                        </form>
                                    </div>
                                    <div class="card-body p-0">
                                        <table class="table table-sm table-hover mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th style="width:38%">Tên</th>
                                                    <th style="width:22%">Giá</th>
                                                    <th style="width:20%">Trạng thái</th>
                                                    <th style="width:20%">Thao tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var v in (IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants ?? Enumerable.Empty<FastFoodShop.Domain.Entities.ProductVariant>())
                                                {
                                                    <tr>
                                                        <td>
                                                            <form method="post" asp-controller="Product" asp-action="UpdateVariant" class="d-flex align-items-center gap-2">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@v.Id" />
                                                                <input type="hidden" name="productId" value="@Model.Id" />
                                                                <input class="form-control form-control-sm" name="variantName" value="@v.VariantName" />
                                                            </form>
                                                        </td>
                                                        <td>
                                                            <form method="post" asp-controller="Product" asp-action="UpdateVariant" class="d-flex align-items-center">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@v.Id" />
                                                                <input type="hidden" name="productId" value="@Model.Id" />
                                                                <input class="form-control form-control-sm" id="price-input-@v.Id" name="price" type="text" value="@v.Price.ToString("N0", new System.Globalization.CultureInfo("en-US"))" />
                                                            </form>
                                                        </td>
                                                        <td>
                                                            <form method="post" asp-controller="Product" asp-action="UpdateVariant" class="d-flex align-items-center">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@v.Id" />
                                                                <input type="hidden" name="productId" value="@Model.Id" />
                                                                <select name="isActive" class="form-select form-select-sm w-auto">
                                                                    @if (v.IsActive)
                                                                    {
                                                                        <option value="true" selected>Đang bán</option>
                                                                        <option value="false">Ẩn</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="true">Đang bán</option>
                                                                        <option value="false" selected>Ẩn</option>
                                                                    }
                                                                </select>
                                                            </form>
                                                        </td>
                                                        <td class="text-nowrap">
                                                            <form method="post" asp-controller="Product" asp-action="UpdateVariant" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@v.Id" />
                                                                <input type="hidden" name="productId" value="@Model.Id" />
                                                                <input type="hidden" name="variantName" value="@v.VariantName" />
                                                                <input type="hidden" id="price-hidden-@v.Id" name="price" value="@v.Price" />
                                                                <input type="hidden" name="isActive" value="@(v.IsActive ? "true" : "false")" />
                                                                <button class="btn btn-primary btn-sm" type="submit" onclick="document.getElementById('price-hidden-@v.Id').value = (document.getElementById('price-input-@v.Id').value || '').replace(/,/g,'');">Lưu</button>
                                                            </form>
                                                            <form method="post" asp-controller="Product" asp-action="DeleteVariant" class="d-inline ms-1">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@v.Id" />
                                                                <input type="hidden" name="productId" value="@Model.Id" />
                                                                <button class="btn btn-danger btn-sm" type="submit">Xóa</button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
                                    @if (TempData["VariantError"] != null)
                                    {
                                        <div class="alert alert-danger m-3">@TempData["VariantError"]</div>
                                    }
                                    @if (TempData["VariantSuccess"] != null)
                                    {
                                        <div class="alert alert-success m-3">@TempData["VariantSuccess"]</div>
                                    }
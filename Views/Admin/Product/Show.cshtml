@model IEnumerable<FastFoodShop.Domain.Entities.Product>
@{
    ViewData["Title"] = "Dashboard - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @if (TempData["ProductSuccess"] != null)
                    {
                        <div class="alert alert-success mt-3">@TempData["ProductSuccess"]</div>
                    }
                    @if (TempData["ProductError"] != null)
                    {
                        <div class="alert alert-danger mt-3">@TempData["ProductError"]</div>
                    }
                    <h1 class="mt-4">Quản lý Sản phẩm</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item active">Sản phẩm</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h3>Bảng sản phẩm</h3>
                                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                                        Tạo sản phẩm
                                    </a>
                                </div>
                                <hr />

                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tên</th>
                                            <th>Danh mục</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var product in Model)
                                            {
                                                <tr>
                                                    <td>@product.Id</td>
                                                    <td>@product.Name</td>
                                                    <td>@(product.Category?.Name ?? "-")</td>
                                                    <td>@(product.IsActive ? "Đang bán" : "Ẩn")</td>
                                                    <td>
                                                        <a asp-controller="Product" asp-action="Detail"
                                                            asp-route-id="@product.Id" class="btn btn-success btn-sm">Xem</a>
                                                        <a asp-controller="Product" asp-action="Update"
                                                            asp-route-id="@product.Id"
                                                            class="btn btn-warning btn-sm mx-2">Cập nhật</a>
                                                        <a asp-controller="Product" asp-action="DeleteConfirm"
                                                            asp-route-id="@product.Id" class="btn btn-danger btn-sm">Xóa</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center">Không có sản phẩm.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <!-- Pagination -->
                                <nav aria-label="Product pagination">
                                    <ul class="pagination justify-content-center">
                                        <!-- Previous -->
                                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                                            <a class="page-link" asp-controller="Product" asp-action="Index"
                                                asp-route-page="@(currentPage - 1)" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>

                                        @for (int i = 1; i <= totalPages; i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" asp-controller="Product" asp-action="Index"
                                                    asp-route-page="@i">@i</a>
                                            </li>
                                        }

                                        <!-- Next -->
                                        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                                            <a class="page-link" asp-controller="Product" asp-action="Index"
                                                asp-route-page="@(currentPage + 1)" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
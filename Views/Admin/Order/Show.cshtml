@{
    ViewData["Title"] = "Đơn hàng - FastFood Shop";
    Layout = null; // đang tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @* Header *@
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @* Sidebar *@
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Quản lý Đơn hàng</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item active">Đơn hàng</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="d-flex">
                                    <h3>Danh sách đơn hàng</h3>
                                </div>

                                <hr />
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã đơn hàng</th>
                                            <th>Tổng tiền</th>
                                            <th>Khách hàng</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            // Controller nên gán:
                                            // ViewBag.Orders = IEnumerable<FastFoodShop.Domain.Entities.Order>;
                                            // ViewBag.CurrentPage = int; ViewBag.TotalPages = int;

                                            var orders = ViewBag.Orders as IEnumerable<FastFoodShop.Domain.Entities.Order>
                                            ?? Enumerable.Empty<FastFoodShop.Domain.Entities.Order>();

                                            int currentPage = (int)(ViewBag.CurrentPage ?? 1);
                                            int totalPages = (int)(ViewBag.TotalPages ?? 1);
                                        }
                                        @foreach (var order in orders)
                                        {
                                            <tr>
                                                <td>DH-@order.Id.ToString("D6")</td>
                                                <td>@order.TotalPrice.ToString("N0") đ</td>
                                                <td>@(order.User?.FullName ?? "Khách vãng lai")</td>
                                                <td>
                                                    @{
                                                        var statusClass = order.Status switch
                                                        {
                                                            "PENDING" => "badge bg-warning text-dark",
                                                            "CONFIRMED" => "badge bg-info text-white",
                                                            "SHIPPING" => "badge bg-primary text-white",
                                                            "DELIVERED" => "badge bg-success text-white",
                                                            "CANCELLED" => "badge bg-danger text-white",
                                                            _ => "badge bg-secondary text-white"
                                                        };
                                                        var statusText = order.Status switch
                                                        {
                                                            "PENDING" => "Chờ xác nhận",
                                                            "CONFIRMED" => "Đã xác nhận",
                                                            "SHIPPING" => "Đang giao",
                                                            "DELIVERED" => "Đã giao",
                                                            "CANCELLED" => "Đã hủy",
                                                            _ => order.Status
                                                        };
                                                    }
                                                    <span class="@statusClass">@statusText</span>
                                                </td>
                                                <td>
                                                    <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Order"
                                                        asp-action="Detail" asp-route-id="@order.Id">
                                                        <i class="fas fa-eye"></i> Chi tiết
                                                    </a>

                                                    <a class="btn btn-warning btn-sm mx-1" asp-area="Admin" asp-controller="Order"
                                                        asp-action="Update" asp-route-id="@order.Id">
                                                        <i class="fas fa-edit"></i> Sửa
                                                    </a>

                                                    <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Order"
                                                        asp-action="Delete" asp-route-id="@order.Id">
                                                        <i class="fas fa-trash"></i> Xóa
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                        
                                        @if (!orders.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center text-muted py-4">
                                                    <i class="fas fa-inbox fa-2x mb-2"></i>
                                                    <div>Chưa có đơn hàng nào</div>
                                                    <small>Khách hàng chưa thực hiện đặt hàng</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" asp-area="Admin" asp-controller="Order"
                                                asp-action="Index" asp-route-page="@(currentPage - 1)"
                                                aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>

                                        @for (int i = 1; i <= totalPages; i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" asp-area="Admin" asp-controller="Order"
                                                    asp-action="Index" asp-route-page="@i">@i</a>
                                            </li>
                                        }

                                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                            <a class="page-link" asp-area="Admin" asp-controller="Order"
                                                asp-action="Index" asp-route-page="@(currentPage + 1)"
                                                aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @* Footer *@
            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
@{
    ViewData["Title"] = "Manage Orders";
    Layout = null; // đang tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @* Header *@
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @* Sidebar *@
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Manage Orders</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">Order</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="d-flex">
                                    <h3>Table Orders</h3>
                                </div>

                                <hr />
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Total Price</th>
                                            <th>User</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            // Controller nên gán:
                                            // ViewBag.Orders = IEnumerable<FastFoodShop.Domain.Entities.Order>;
                                            // ViewBag.CurrentPage = int; ViewBag.TotalPages = int;

                                            var orders = ViewBag.Orders as IEnumerable<FastFoodShop.Domain.Entities.Order>
                                            ?? Enumerable.Empty<FastFoodShop.Domain.Entities.Order>();

                                            int currentPage = (int)(ViewBag.CurrentPage ?? 1);
                                            int totalPages = (int)(ViewBag.TotalPages ?? 1);
                                        }
                                        @foreach (var order in orders)
                                        {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>@order.TotalPrice.ToString("N0") đ</td>
                                                <td>@(order.User?.FullName ?? "N/A")</td>
                                                <td>@order.Status</td>
                                                <td>
                                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Order"
                                                        asp-action="Detail" asp-route-id="@order.Id">View</a>

                                                    <a class="btn btn-warning mx-2" asp-area="Admin" asp-controller="Order"
                                                        asp-action="Update" asp-route-id="@order.Id">Update</a>

                                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Order"
                                                        asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" asp-area="Admin" asp-controller="Order"
                                                asp-action="Index" asp-route-page="@(currentPage - 1)"
                                                aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>

                                        @for (int i = 1; i <= totalPages; i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" asp-area="Admin" asp-controller="Order"
                                                    asp-action="Index" asp-route-page="@i">@i</a>
                                            </li>
                                        }

                                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                            <a class="page-link" asp-area="Admin" asp-controller="Order"
                                                asp-action="Index" asp-route-page="@(currentPage + 1)"
                                                aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @* Footer *@
            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
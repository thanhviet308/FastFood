@model FastFoodShop.Domain.Entities.Order
@{
    ViewData["Title"] = "Cập nhật Đơn hàng - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/admin-styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css?t=@DateTime.Now.Ticks" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Đơn hàng</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Order" asp-action="Index">Đơn hàng</a>
                        </li>
                        <li class="breadcrumb-item active">Cập nhật</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-6 col-12 mx-auto">
                                <h3>Cập nhật đơn hàng</h3>
                                <hr />

                                <form method="post" action="/admin/orders/update" class="row">
                                    @Html.AntiForgeryToken()
                                    @* Hidden Id *@
                                    <input asp-for="Id" type="hidden" />

                                    <div class="mb-3">
                                        <label class="form-label">Mã đơn hàng: #@Model.Id</label>
                                        &nbsp;&nbsp;&nbsp;&nbsp;
                                        <label class="form-label">
                                            Giá: @Model.TotalPrice.ToString("N0") đ
                                        </label>
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="User.FullName" class="form-label">Khách hàng:</label>
                                        <input asp-for="User.FullName" class="form-control" disabled />
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="Status" class="form-label">Trạng thái đơn hàng:</label>
                                        <select asp-for="Status" class="form-select">
                                            <option value="PENDING">Chờ xác nhận</option>
                                            <option value="CONFIRMED">Đã xác nhận</option>
                                            <option value="SHIPPING">Đang giao</option>
                                            <option value="DELIVERED">Đã giao</option>
                                            <option value="CANCELLED">Đã hủy</option>
                                        </select>
                                    </div>

                                    <div class="col-12 mb-5">
                                        <button type="submit" class="btn btn-warning">Cập nhật</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
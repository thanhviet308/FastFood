@model FastFoodShop.Domain.Entities.Order
@{
    ViewData["Title"] = "Update Order - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Orders</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Order" asp-action="Index">Order</a>
                        </li>
                        <li class="breadcrumb-item active">Update</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-6 col-12 mx-auto">
                                <h3>Update an order</h3>
                                <hr />

                                <form asp-area="Admin" asp-controller="Order" asp-action="Update" method="post"
                                    class="row">
                                    @* Hidden Id *@
                                    <input asp-for="Id" type="hidden" />

                                    <div class="mb-3">
                                        <label class="form-label">Order id = @Model.Id</label>
                                        &nbsp;&nbsp;&nbsp;&nbsp;
                                        <label class="form-label">
                                            Price: @Model.TotalPrice.ToString("N0") đ
                                        </label>
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="User.FullName" class="form-label">User:</label>
                                        <input asp-for="User.FullName" class="form-control" disabled />
                                    </div>

                                    <div class="mb-3 col-12 col-md-6">
                                        <label asp-for="Status" class="form-label">Status:</label>
                                        <select asp-for="Status" class="form-select">
                                            <option value="PENDING">PENDING</option>
                                            <option value="SHIPPING">SHIPPING</option>
                                            <option value="COMPLETE">COMPLETE</option>
                                            <option value="CANCEL">CANCEL</option>
                                        </select>
                                    </div>

                                    <div class="col-12 mb-5">
                                        <button type="submit" class="btn btn-warning">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
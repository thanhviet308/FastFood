@model FastFoodShop.Domain.Entities.Order
@{
    ViewData["Title"] = "Xóa Đơn hàng - FastFood Shop";
    Layout = null; // tự include header/sidebar/footer
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="FastFood Shop" />
    <meta name="author" content="FastFood Shop" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    @await Html.PartialAsync("~/Views/Admin/Layout/_Header.cshtml")

    <div id="layoutSidenav">
        @await Html.PartialAsync("~/Views/Admin/Layout/_Sidebar.cshtml")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Đơn hàng</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Order" asp-action="Index">Đơn hàng</a>
                        </li>
                        <li class="breadcrumb-item active">Xóa</li>
                    </ol>

                    <div class="mt-5">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="d-flex justify-content-between">
                                    <h3>Xóa đơn hàng ID = @Model.Id</h3>
                                </div>

                                <hr />
                                <div class="alert alert-danger">
                                    Bạn có chắc chắn muốn xóa đơn hàng này?
                                </div>

                                <form asp-area="Admin" asp-controller="Order" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input asp-for="Id" type="hidden" />

                                    <button type="submit" class="btn btn-danger">Xác nhận</button>
                                    <a class="btn btn-secondary ms-2" asp-area="Admin" asp-controller="Order"
                                        asp-action="Index">Hủy</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            @await Html.PartialAsync("~/Views/Admin/Layout/_Footer.cshtml")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>

</html>
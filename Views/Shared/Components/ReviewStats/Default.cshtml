@model FastFoodShop.ViewComponents.ReviewStatsViewModel

<div class="text-warning mb-3">
    @for (int i = 1; i <= 5; i++)
    {
        <i class="fas fa-star @(i <= Model.AverageRating ? "text-warning" : "text-muted-light")"></i>
    }
    <span class="text-muted ms-2">@Model.AverageRating.ToString("F1")/5 (@Model.TotalReviews.ToString("N0") đánh giá)</span>
</div>
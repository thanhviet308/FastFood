@model FastFoodShop.DTOs.RegisterDTO
@{
    ViewData["Title"] = "Đăng ký - Cửa Hàng Đồ Ăn Nhanh";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap + Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/auth-fastfood.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="bg-primary">
    <div id="layoutAuthentication" class="min-vh-100 d-flex align-items-center">
        <div id="layoutAuthentication_content" class="container">
            <main>
                <div class="row justify-content-center">
                    <div class="col-lg-7 col-md-10">
                        <div class="card auth-card shadow-sm border-0 rounded-4 mt-4">
                            <div class="card-header text-center py-4">
                                <h1 class="h4 fw-semibold mb-1">Tạo tài khoản</h1>
                                <p class="text-muted mb-0 small">Đăng ký để đặt món nhanh hơn</p>
                            </div>

                            <div class="card-body p-4 p-lg-5">
                                <form asp-action="Register" asp-controller="HomePage" method="post" novalidate>
                                    @Html.AntiForgeryToken()

                                    <!-- Lỗi chung -->
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"
                                        role="alert"></div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input asp-for="FirstName" class="form-control"
                                                    placeholder="Nhập tên của bạn" />
                                                <label asp-for="FirstName">Tên</label>
                                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input asp-for="LastName" class="form-control"
                                                    placeholder="Nhập họ của bạn" />
                                                <label asp-for="LastName">Họ</label>
                                                <span asp-validation-for="LastName" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Email" class="form-control" placeholder="name@example.com"
                                            inputmode="email" autocomplete="email" />
                                        <label asp-for="Email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <div class="form-floating position-relative">
                                                    <input asp-for="Password" type="password" class="form-control pe-5"
                                                        placeholder="Tạo mật khẩu" autocomplete="new-password"
                                                        id="passwordInput" />
                                                    <label asp-for="Password">Mật khẩu</label>
                                                    <button type="button" class="field-icon-btn" id="togglePassword"
                                                        aria-label="Hiện/ẩn mật khẩu">
                                                        <i class="fa-solid fa-eye" id="toggleIcon1"></i>
                                                    </button>
                                                </div>
                                                <span class="form-text">Tối thiểu 8 ký tự, nên có số & chữ.</span>
                                                <span asp-validation-for="Password" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <div class="form-floating position-relative">
                                                    <input asp-for="ConfirmPassword" type="password"
                                                        class="form-control pe-5" placeholder="Nhập lại mật khẩu"
                                                        autocomplete="new-password" id="confirmInput" />
                                                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                                                    <button type="button" class="field-icon-btn" id="toggleConfirm"
                                                        aria-label="Hiện/ẩn mật khẩu">
                                                        <i class="fa-solid fa-eye" id="toggleIcon2"></i>
                                                    </button>
                                                </div>
                                                <span asp-validation-for="ConfirmPassword"
                                                    class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-grid mt-2">
                                        <button class="btn btn-primary btn-lg" type="submit">Tạo tài khoản</button>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <a href="/" class="small text-muted text-decoration-none">Về trang chủ</a>
                                        <a href="/login" class="a-login">Đã có tài khoản? Đăng nhập</a>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="text-center mt-3 small text-muted">
                            Bảo mật bởi HTTPS • Xác thực server & client
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script>
        // Toggle show/hide password & confirm
        (function () {
            function bindToggle(inputId, btnId, iconId) {
                const input = document.getElementById(inputId);
                const btn = document.getElementById(btnId);
                const icon = document.getElementById(iconId);
                if (!input || !btn || !icon) return;
                btn.addEventListener('click', function () {
                    const isPwd = input.type === 'password';
                    input.type = isPwd ? 'text' : 'password';
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                });
            }
            bindToggle('passwordInput', 'togglePassword', 'toggleIcon1');
            bindToggle('confirmInput', 'toggleConfirm', 'toggleIcon2');
        })();
    </script>
</body>

</html>
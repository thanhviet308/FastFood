@model FastFoodShop.Domain.Entities.Product
@{
    ViewData["Title"] = Model.Name + " - FastFood Shop";
    Layout = null;
    var variants = ViewBag.Variants as IEnumerable<FastFoodShop.Domain.Entities.ProductVariant> 
                  ?? Enumerable.Empty<FastFoodShop.Domain.Entities.ProductVariant>();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&family=Bebas+Neue&display=swap" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Bootstrap -->
    <link href="~/client/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/client/css/style.css" rel="stylesheet" />
    <!-- FastFood Theme -->
    <link href="~/client/css/fastfood-theme.css" rel="stylesheet" />
    <!-- Product Detail Styles -->
    <link href="~/client/css/product-detail.css" rel="stylesheet" />
</head>
<body>
    @await Html.PartialAsync("~/Views/Client/Layout/_Header.cshtml")

    <!-- Page Header -->
    <section class="py-5 ff-bg-gradient text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb" class="mb-2">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/" class="text-white">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="/products" class="text-white">Thực đơn</a></li>
                            <li class="breadcrumb-item active text-warning" aria-current="page">@Model.Name</li>
                        </ol>
                    </nav>
                    <h1 class="display-4 fw-bold mb-2">@Model.Name</h1>
                    <p class="lead mb-0">@Model.ShortDesc</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="product-rating-large">
                        <i class="fa-solid fa-star text-warning"></i>
                        <i class="fa-solid fa-star text-warning"></i>
                        <i class="fa-solid fa-star text-warning"></i>
                        <i class="fa-solid fa-star text-warning"></i>
                        <i class="fa-solid fa-star text-warning"></i>
                        <span class="ms-2 text-white">(4.8 - 234 đánh giá)</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Product Detail Section -->
    <section class="py-5 product-detail-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="product-detail-card">
                        <div class="product-gallery">
                            <img src="~/images/product/@Model.Image" alt="@Model.Name" />
                            <div class="position-absolute top-0 start-0 m-3">
                                <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill">
                                    <i class="fas fa-fire me-1"></i>Bán chạy
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="product-info">
                        <h2 class="display-5 fw-bold mb-3 ff-text-gradient">@Model.Name</h2>
                        <p class="lead text-muted mb-4">@Model.ShortDesc</p>
                        
                        <div class="product-price-large mb-4">
                            @if (variants.Any())
                            {
                                <span id="product-price-display">@variants.First().Price.ToString("N0")₫</span>
                            }
                            else
                            {
                                <span class="text-muted">Liên hệ</span>
                            }
                        </div>
                        
                        <!-- Variants Selection -->
                        @if (variants.Any())
                        {
                            <div class="mb-4">
                                <h5 class="mb-3">
                                    <i class="fa-solid fa-list-ul me-2 text-primary"></i>
                                    Chọn loại:
                                </h5>
                                <div class="row g-3">
                                    @foreach (var v in variants)
                                    {
                                        <div class="col-md-6">
                                            @if (v.IsActive)
                                            {
                                                <div class="variant-option" data-variant-id="@v.Id" data-price="@v.Price">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <h6 class="mb-1 fw-bold">@v.VariantName</h6>
                                                            <small class="text-muted">@string.Format("{0:N0}₫", v.Price)</small>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="variantId" value="@v.Id" 
                                                                   id="variant_@v.Id" @(variants.FirstOrDefault(vv => vv.IsActive) == v ? "checked" : "")>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="variant-option disabled" style="opacity: 0.6; cursor: not-allowed;">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <h6 class="mb-1 fw-bold text-muted">@v.VariantName</h6>
                                                            <small class="text-danger">Tạm hết</small>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" disabled 
                                                                   id="variant_@v.Id" style="cursor: not-allowed;">
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        
                        <!-- Quantity and Add to Cart -->
                        <form method="post" asp-controller="Item" asp-action="HandleAddProductFromViewDetail" class="mb-4" onsubmit="return false;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="variantId" id="selectedVariantId" value="@(variants.FirstOrDefault()?.Id ?? 0)" />
                            <input type="hidden" id="isUserAuthenticated" value="@User.Identity.IsAuthenticated.ToString().ToLower()" />
                            
                            <div class="mb-4">
                                <h6 class="mb-3">
                                    <i class="fa-solid fa-calculator me-2 text-primary"></i>
                                    Số lượng:
                                </h6>
                                <div class="quantity-control">
                                    <button type="button" class="btn-minus">-</button>
                                    <input type="number" name="quantity" id="quantity" value="1" min="1" max="99" class="form-control" />
                                    <button type="button" class="btn-plus">+</button>
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="ff-btn-primary btn-lg" aria-label="Thêm vào giỏ hàng">
                                    <i class="fa-solid fa-cart-plus me-2"></i>Thêm vào giỏ hàng
                                </button>
                            </div>
                        </form>
                        
                        <!-- Product Features -->
                        <div class="product-features">
                            <h6 class="mb-3 text-muted">
                                <i class="fa-solid fa-shield-halved me-2"></i>
                                Cam kết của chúng tôi:
                            </h6>
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="product-feature-item">
                                        <i class="fa-solid fa-truck-fast text-primary me-2"></i>
                                        <small class="text-muted">Giao hàng nhanh</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="product-feature-item">
                                        <i class="fa-solid fa-award text-primary me-2"></i>
                                        <small class="text-muted">Chất lượng đảm bảo</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="product-feature-item">
                                        <i class="fa-solid fa-utensils text-primary me-2"></i>
                                        <small class="text-muted">Nguyên liệu tươi mới</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="product-feature-item">
                                        <i class="fa-solid fa-headset text-primary me-2"></i>
                                        <small class="text-muted">Hỗ trợ 24/7</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Product Description -->
            @if (!string.IsNullOrEmpty(Model.DetailDesc))
            {
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card product-description-card">
                            <div class="card-body p-4">
                                <h4 class="mb-4">
                                    <i class="fas fa-info-circle me-2 text-primary"></i>
                                    Mô tả sản phẩm
                                </h4>
                                <div class="product-description">
                                    @Html.Raw(Model.DetailDesc)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    @await Html.PartialAsync("~/Views/Client/Layout/_Footer.cshtml")
    
    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/client/js/main.js"></script>
    <script src="~/client/js/product-detail.js"></script>
</body>
</html>
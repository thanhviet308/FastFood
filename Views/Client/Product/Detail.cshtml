@model FastFoodShop.Domain.Entities.Product
@{
    ViewData["Title"] = @Model.Name + " - FastFood Shop";
    Layout = null;
    var variants = (IEnumerable<FastFoodShop.Domain.Entities.ProductVariant>)ViewBag.Variants ?? Enumerable.Empty<FastFoodShop.Domain.Entities.ProductVariant>();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&family=Bebas+Neue&display=swap" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    
    <!-- Bootstrap -->
    <link href="~/client/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/client/css/style.css" rel="stylesheet" />
    <!-- FastFood Theme -->
    <link href="~/client/css/fastfood-theme.css" rel="stylesheet" />
    
    <style>
        .product-detail-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            border: none;
        }
        
        .product-gallery {
            position: relative;
            overflow: hidden;
            height: 500px;
        }
        
        .product-gallery img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .product-gallery:hover img {
            transform: scale(1.05);
        }
        
        .product-info {
            padding: 40px;
        }
        
        .product-price-large {
            font-family: var(--ff-font-display);
            font-size: 3rem;
            color: var(--ff-primary);
            font-weight: 400;
            margin-bottom: 20px;
        }
        
        .variant-option {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .variant-option:hover {
            border-color: var(--ff-primary);
            background: rgba(255, 107, 53, 0.05);
        }
        
        .variant-option.active {
            border-color: var(--ff-primary);
            background: rgba(255, 107, 53, 0.1);
        }
        
        .quantity-control {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .quantity-control input {
            width: 80px;
            text-align: center;
            font-weight: bold;
        }
        
        .quantity-control button {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid var(--ff-primary);
            background: white;
            color: var(--ff-primary);
            font-weight: bold;
            transition: all 0.3s ease;
        }
        
        .quantity-control button:hover {
            background: var(--ff-primary);
            color: white;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("~/Views/Client/Layout/_Header.cshtml")

    <!-- Page Header -->
    <section class="py-5 ff-bg-gradient text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb" class="mb-2">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/" class="text-white">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="/products" class="text-white">Thực đơn</a></li>
                            <li class="breadcrumb-item active text-warning" aria-current="page">@Model.Name</li>
                        </ol>
                    </nav>
                    <h1 class="display-4 fw-bold mb-2">@Model.Name</h1>
                    <p class="lead mb-0">@Model.ShortDesc</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="product-rating-large">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <span class="ms-2 text-white">(4.8 - 234 đánh giá)</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Product Detail Section -->
    <section class="py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="product-detail-card">
                        <div class="product-gallery">
                            <img src="~/images/product/@Model.Image" alt="@Model.Name" />
                            <div class="position-absolute top-0 start-0 m-3">
                                <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill">
                                    <i class="fas fa-fire me-1"></i>Bán chạy
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="product-info">
                        <h2 class="display-5 fw-bold mb-3 ff-text-gradient">@Model.Name</h2>
                        <p class="lead text-muted mb-4">@Model.ShortDesc</p>
                        
                        <div class="product-price-large mb-4">
                            @if (variants.Any())
                            {
                                <span id="product-price-display">@variants.First().Price.ToString("N0")₫</span>
                            }
                            else
                            {
                                <span class="text-muted">Liên hệ</span>
                            }
                        </div>
                        
                        <!-- Variants Selection -->
                        @if (variants.Any())
                        {
                            <div class="mb-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-list-ul me-2 text-primary"></i>
                                    Chọn loại:
                                </h5>
                                <div class="row g-3">
                                    @foreach (var v in variants)
                                    {
                                        <div class="col-md-6">
                                            <div class="variant-option" data-variant-id="@v.Id" data-price="@v.Price">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <h6 class="mb-1 fw-bold">@v.VariantName</h6>
                                                        <small class="text-muted">@string.Format("{0:N0}₫", v.Price)</small>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="variantId" value="@v.Id" 
                                                               id="variant_@v.Id" @(variants.First() == v ? "checked" : "")>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        
                        <!-- Quantity and Add to Cart -->
                        <form method="post" asp-controller="Item" asp-action="HandleAddProductFromViewDetail" class="mb-4">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="variantId" id="selectedVariantId" value="@(variants.FirstOrDefault()?.Id ?? 0)" />
                            
                            <div class="mb-4">
                                <h6 class="mb-3">
                                    <i class="fas fa-calculator me-2 text-primary"></i>
                                    Số lượng:
                                </h6>
                                <div class="quantity-control">
                                    <button type="button" class="btn-minus">-</button>
                                    <input type="number" name="quantity" id="quantity" value="1" min="1" max="99" class="form-control" />
                                    <button type="button" class="btn-plus">+</button>
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="ff-btn-primary btn-lg">
                                    <i class="fas fa-cart-plus me-2"></i>
                                    Thêm vào giỏ hàng
                                </button>
                                <button type="button" class="btn btn-outline-primary btn-lg rounded-pill">
                                    <i class="fas fa-heart me-2"></i>
                                    Yêu thích
                                </button>
                            </div>
                        </form>
                        
                        <!-- Product Features -->
                        <div class="border-top pt-4">
                            <h6 class="mb-3 text-muted">
                                <i class="fas fa-shield-alt me-2"></i>
                                Cam kết của chúng tôi:
                            </h6>
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-shipping-fast text-primary me-2"></i>
                                        <small class="text-muted">Giao hàng nhanh</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-award text-primary me-2"></i>
                                        <small class="text-muted">Chất lượng đảm bảo</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-undo text-primary me-2"></i>
                                        <small class="text-muted">Đổi trả dễ dàng</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-headset text-primary me-2"></i>
                                        <small class="text-muted">Hỗ trợ 24/7</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Product Description -->
            @if (!string.IsNullOrEmpty(Model.DetailDesc))
            {
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm rounded-3">
                            <div class="card-body p-4">
                                <h4 class="mb-4">
                                    <i class="fas fa-info-circle me-2 text-primary"></i>
                                    Mô tả sản phẩm
                                </h4>
                                <div class="product-description">
                                    @Html.Raw(Model.DetailDesc)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    @await Html.PartialAsync("~/Views/Client/Layout/_Footer.cshtml")
    
    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/client/js/main.js"></script>
    
    <script>
        // Variant selection
        document.querySelectorAll('.variant-option').forEach(option => {
            option.addEventListener('click', function() {
                // Remove active class from all options
                document.querySelectorAll('.variant-option').forEach(opt => opt.classList.remove('active'));
                // Add active class to clicked option
                this.classList.add('active');
                // Update radio button
                this.querySelector('input[type="radio"]').checked = true;
                // Update selected variant ID
                document.getElementById('selectedVariantId').value = this.dataset.variantId;
                // Update price display
                const price = parseInt(this.dataset.price);
                document.querySelector('.product-price-large').textContent = price.toLocaleString('vi-VN') + '₫';
            });
        });
        
        // Quantity control
        const quantityInput = document.getElementById('quantity');
        const btnMinus = document.querySelector('.btn-minus');
        const btnPlus = document.querySelector('.btn-plus');
        
        btnMinus.addEventListener('click', function() {
            let currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        });
        
        btnPlus.addEventListener('click', function() {
            let currentValue = parseInt(quantityInput.value);
            if (currentValue < 99) {
                quantityInput.value = currentValue + 1;
            }
        });
        
        // Form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            // Add to cart animation
            const button = this.querySelector('button[type="submit"]');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang thêm...';
            button.disabled = true;
            
            // Simulate adding to cart
            setTimeout(() => {
                this.submit();
            }, 1000);
        });
    </script>
</body>
</html>
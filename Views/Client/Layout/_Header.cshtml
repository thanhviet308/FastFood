@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject FastFoodShop.Domain.Interfaces.IProductService ProductService

@{
    var isAuth = User?.Identity?.IsAuthenticated == true;
    var cartDistinct = 0;

    if (isAuth)
    {
        var email = User.FindFirst(ClaimTypes.Email)?.Value ?? User?.Identity?.Name;
        if (!string.IsNullOrWhiteSpace(email))
        {
            cartDistinct = await ProductService.GetDistinctCountByEmailAsync(email);
        }
    }
}

<div id="siteHeader" class="container-fluid minimal-header">
    <!-- Topbar - Minimal Style -->
    <div class="container d-none d-lg-block border-bottom">
        <div class="d-flex justify-content-between align-items-center py-2">
            <div class="d-flex gap-3">
                <small class="text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    123 Đường Ẩm Thực, TP.HCM
                </small>
                <small class="text-muted">
                    <i class="fas fa-envelope me-1"></i>
                    fastfood@shop.com
                </small>
                <small class="text-muted">
                    <i class="fas fa-phone me-1"></i>
                    090 123 4567
                </small>
            </div>
            <div class="d-flex gap-3">
                <a href="#" class="text-muted text-decoration-none"><small>Chính sách</small></a>
                <a href="#" class="text-muted text-decoration-none"><small>Điều khoản</small></a>
                <a href="#" class="text-muted text-decoration-none"><small>Hỗ trợ</small></a>
            </div>
        </div>
    </div>

    <!-- Navbar - Minimal Style -->
    <div class="container">
        <nav class="navbar navbar-expand-xl navbar-light">
            <a href="/" class="navbar-brand">
                <h1 class="mb-0 minimal-text-primary">
                    <i class="fas fa-hamburger me-2"></i>
                    FastFood Shop
                </h1>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="/" class="nav-item nav-link">Trang Chủ</a>
                    <a href="/products" class="nav-item nav-link">Thực Đơn</a>
                    
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            Dịch Vụ
                        </a>
                        <div class="dropdown-menu">
                            <a href="/cart" class="dropdown-item">Giỏ hàng</a>
                            <a href="/checkout" class="dropdown-item">Thanh toán</a>
                            <a href="/testimonial" class="dropdown-item">Đánh giá</a>
                            <a href="/contact" class="dropdown-item">Liên hệ</a>
                        </div>
                    </div>

                    @if (User?.IsInRole("ADMIN") == true)
                    {
                        <a href="/admin" class="nav-item nav-link">Quản trị</a>
                    }
                </div>

                <div class="d-flex align-items-center gap-3">
                    <!-- Search -->
                    <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="fas fa-search"></i>
                    </button>

                    @if (isAuth)
                    {
                        <!-- Cart -->
                        <a href="/cart" class="btn btn-outline-primary btn-sm position-relative" title="Giỏ hàng">
                            <i class="fas fa-shopping-cart"></i>
                            @if (cartDistinct > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @cartDistinct
                                </span>
                            }
                        </a>

                        <!-- User dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <div class="p-3 text-center border-bottom">
                                        <img src="@Url.Content("~/images/avatar/" + (User?.FindFirst("avatar")?.Value ?? (string)ViewBag.Avatar ?? "default.png"))"
                                             alt="avatar" class="rounded-circle mb-2" width="50" height="50" style="object-fit: cover;">
                                        <div class="fw-bold text-dark">
                                            @(User?.FindFirst("full_name")?.Value ?? User?.Identity?.Name ?? (string)ViewBag.FullName ?? "Tài khoản")
                                        </div>
                                    </div>
                                </li>
                                <li><a class="dropdown-item" href="/account/manage">Quản lý tài khoản</a></li>
                                <li><a class="dropdown-item" href="/orders/history">Lịch sử mua hàng</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button class="dropdown-item text-danger" type="submit">Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="/login" class="btn btn-primary btn-sm">
                            <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                        </a>
                    }
                </div>
            </div>
        </nav>
    </div>
</div>
@* Views/Client/Layout/_Banner.cshtml *@
<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary">100% Sản Phẩm Chính Hãng</h4>
                <h1 class="mb-5 display-3 text-primary">Hàng trong nước<br /> Và ngoài nước</h1>
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active rounded"
                            style="position: relative; height: 400px; overflow: hidden; border-radius: 10px;">
                            <img src="~/client/img/banner3.png"
                                style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;"
                                alt="First slide" />
                            <a asp-controller="Cart" asp-action="Index" class="btn px-4 py-2 text-white rounded">
                                Giỏ trái cây
                            </a>
                        </div>
                        <div class="carousel-item rounded"
                            style="position: relative; height: 400px; overflow: hidden; border-radius: 10px;">
                            <img src="~/client/img/banner4.jpg"
                                style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;"
                                alt="Second slide" />
                            <a asp-controller="Product" asp-action="Index" class="btn px-4 py-2 text-white rounded">
                                Trái Cây Ngon
                            </a>
                        </div>
                        @* 
                        <div class="carousel-item rounded"
                             style="position: relative; height: 400px; overflow: hidden; border-radius: 10px;">
                            <img src="~/client/img/banner-web-2.png"
                                 style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;"
                                 alt="Third slide" />
                            <a class="btn px-4 py-2 text-white rounded"></a>
                        </div>
                        *@
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
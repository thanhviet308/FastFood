@model IEnumerable<FastFoodShop.Domain.Entities.Order>
@{
    ViewData["Title"] = "Lịch sử mua hàng - Cửa Hàng Đồ Ăn Nhanh";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&family=Bebas+Neue&display=swap" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Bootstrap -->
    <link href="~/client/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/client/css/style.css" rel="stylesheet" />
    <!-- FastFood Theme -->
    <link href="~/client/css/fastfood-theme.css" rel="stylesheet" />
    <!-- History Page Styles -->
    <link href="~/client/css/history.css" rel="stylesheet" />
</head>

<body>
    @await Html.PartialAsync("~/Views/Client/Layout/_Header.cshtml")

    <!-- History Page Start -->
    <div class="container-fluid py-5" style="background: linear-gradient(135deg, var(--ff-primary) 0%, var(--ff-secondary) 100%);">
        <div class="container py-5">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-white mb-3">
                    <i class="fas fa-history me-3"></i>Lịch Sử Mua Hàng
                </h1>
                <p class="lead text-white-50 mb-0">Theo dõi các đơn hàng của bạn tại FastFood Shop</p>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="empty-state bg-white rounded-4">
                            <div class="empty-icon">
                                <i class="fas fa-shopping-basket"></i>
                            </div>
                            <h4 class="text-muted mb-3">Chưa có đơn hàng nào</h4>
                            <p class="text-muted mb-4">Bạn chưa thực hiện bất kỳ đơn hàng nào tại cửa hàng của chúng tôi.</p>
                            <a href="/" class="ff-btn-primary">
                                <i class="fas fa-home me-2"></i>Về trang chủ
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var order in Model)
                    {
                        <div class="col-lg-6 mb-4">
                            <div class="order-card">
                                <div class="order-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1 fw-bold">
                                                <i class="fas fa-receipt me-2"></i>
                                                Đơn hàng #@order.Id.ToString().PadLeft(6, '0')
                                            </h5>
                                            <small class="text-white-50">
                                                <i class="fas fa-calendar me-1"></i>
                                                @order.Id
                                            </small>
                                        </div>
                                        <div class="order-status ">
                                            @switch (order.Status?.ToLower())
                                            {
                                                case "pending":
                                                case "chờ xử lý":
                                                    <span class="status-pending">Chờ xử lý</span>
                                                    break;
                                                case "processing":
                                                case "đang xử lý":
                                                    <span class="status-processing">Đang xử lý</span>
                                                    break;
                                                case "completed":
                                                case "hoàn thành":
                                                    <span class="status-completed">Hoàn thành</span>
                                                    break;
                                                case "cancelled":
                                                case "đã hủy":
                                                    <span class="status-cancelled">Đã hủy</span>
                                                    break;
                                                default:
                                                    <span>@order.Status</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card-body p-4">
                                    <div class="mb-4">
                                        <h6 class="mb-3 text-muted">
                                            <i class="fas fa-box me-2"></i>
                                            Sản phẩm trong đơn hàng:
                                        </h6>
                                        
                                        @foreach (var orderDetail in order.OrderDetails ??
                                        Enumerable.Empty<FastFoodShop.Domain.Entities.OrderDetail>())
                                        {
                                            <div class="product-item">
                                                <div class="row align-items-center">
                                                    <div class="col-auto">
                                                        <img src="~/images/product/@(orderDetail.Product?.Image ?? "default.jpg")"
                                                             class="product-image" alt="@(orderDetail.Product?.Name ?? "Sản phẩm")">
                                                    </div>
                                                    <div class="col">
                                                        <h6 class="mb-1 fw-semibold">
                                                            <a href="/products/@(orderDetail.Product?.Id)" class="text-decoration-none text-dark">
                                                                @(orderDetail.Product?.Name ?? "Sản phẩm không xác định")
                                                            </a>
                                                        </h6>
                                                        <small class="text-muted">
                                                            @string.Format("{0:N0}₫ x {1}", orderDetail.Price, orderDetail.Quantity)
                                                        </small>
                                                    </div>
                                                    <div class="col-auto text-end">
                                                        <div class="price-highlight">
                                                            @string.Format("{0:N0}₫", orderDetail.Price * orderDetail.Quantity)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="total-section">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0 fw-bold">Tổng cộng:</h5>
                                            <h4 class="mb-0 text-primary fw-bold">
                                                @string.Format("{0:N0}₫", order.TotalPrice)
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    <!-- History Page End -->

    @await Html.PartialAsync("~/Views/Client/Layout/_Footer.cshtml")

    

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/client/lib/easing/easing.min.js"></script>
    <script src="~/client/lib/waypoints/waypoints.min.js"></script>
    <script src="~/client/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/client/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/client/js/main.js"></script>
</body>

</html>
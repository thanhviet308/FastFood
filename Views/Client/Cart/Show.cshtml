@model IEnumerable<FastFoodShop.Domain.Entities.CartDetail>
@{
    ViewData["Title"] = "Giỏ hàng - FastFood Shop";
    Layout = null;
    var totalPrice = (decimal)(ViewBag.TotalPrice ?? 0M);
    var cart = ViewBag.Cart as FastFoodShop.Domain.Entities.Cart;
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    var af = Xsrf.GetAndStoreTokens(Context);
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var isAuth = User?.Identity?.IsAuthenticated == true;
    var sumCart = HttpContextAccessor.HttpContext?.Session.GetInt32("sum") ?? 0;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet" />
    
    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    
    <!-- Libraries Stylesheet -->
    <link href="~/client/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/client/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/client/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/client/css/style.css" rel="stylesheet" />
    <!-- FastFood Theme Stylesheet -->
    <link href="~/client/css/fastfood-theme.css" rel="stylesheet" />
    <!-- Cart Stylesheet -->
    <link href="~/client/css/cart.css" rel="stylesheet" />
    
    <!-- jQuery Toast -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css" rel="stylesheet" />
    
    <meta name="X-CSRF-TOKEN" content="@af.RequestToken" />
</head>
<body>
    <!-- Spinner Start -->
    <div id="spinner"
        class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    @await Html.PartialAsync("~/Views/Client/Layout/_Header.cshtml")

    <!-- FastFood Cart Header Start -->
    <div class="ff-cart-header-section">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-shopping-cart me-3"></i>Giỏ hàng của bạn
            </h1>
            <p class="lead mb-0">Kiểm tra và quản lý các món ăn bạn đã chọn</p>
            <nav aria-label="breadcrumb" class="d-flex justify-content-center mt-3">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Trang chủ</a></li>
                    <li class="breadcrumb-item active text-white-50" aria-current="page">Giỏ hàng</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- FastFood Cart Header End -->

    <!-- FastFood Cart Content Start -->
    <div class="ff-cart-page">
        <div class="container">
            @if (Model == null || !Model.Any())
            {
                <!-- Empty Cart -->
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <div class="ff-empty-cart">
                            <div class="ff-empty-cart-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <h3 class="ff-empty-cart-title">Giỏ hàng trống</h3>
                            <p class="ff-empty-cart-text">Bạn chưa chọn món ăn nào. Hãy khám phá thực đơn của chúng tôi!</p>
                            <a href="/products" class="ff-btn-primary">
                                <i class="fas fa-utensils me-2"></i>Khám phá thực đơn
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Cart Items -->
                <div class="ff-cart-container">
                    <div class="ff-cart-items">
                        <div class="ff-cart-header">
                            <h4 class="mb-0">
                                <i class="fas fa-list me-2"></i>Danh sách món ăn
                            </h4>
                            <span class="ff-cart-count">@Model.Count() món</span>
                        </div>
                        
                        @foreach (var item in Model)
                        {
                            <div class="ff-cart-item" data-cart-detail-id="@item.Id">
                                <div class="ff-cart-item-image">
                                    @if (!string.IsNullOrEmpty(item.Product?.Image))
                                    {
                                        <img src="~/images/product/@item.Product.Image" alt="@item.Product.Name" />
                                    }
                                    else
                                    {
                                        <img src="https://placehold.co/100x100?text=%F0%9F%8D%94&background=f8f9fa&text=888888" alt="@item.Product?.Name" />
                                    }
                                </div>
                                <div class="ff-cart-item-info">
                                    <h5 class="ff-cart-item-title">@item.Product?.Name</h5>
                                    @if (item.Variant != null)
                                    {
                                        <p class="ff-cart-item-variant">
                                            <i class="fas fa-tag me-1"></i>@item.Variant.VariantName
                                        </p>
                                    }
                                    <p class="ff-cart-item-price">@item.Price.ToString("N0")đ</p>
                                </div>
                                <div class="ff-cart-item-quantity">
                                    <div class="ff-quantity-control">
                                        <button class="ff-quantity-btn minus" data-cart-detail-id="@item.Id" data-action="decrease">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" class="ff-quantity-input" value="@item.Quantity" 
                                               data-cart-detail-id="@item.Id" min="1" max="99" />
                                        <button class="ff-quantity-btn plus" data-cart-detail-id="@item.Id" data-action="increase">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="ff-cart-item-total">
                                    <span class="ff-item-total-price">@((item.Price * item.Quantity).ToString("N0"))đ</span>
                                    <form asp-action="DeleteCartDetail" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="ff-cart-item-remove" title="Xóa sản phẩm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="ff-cart-sidebar">
                        <div class="ff-cart-summary">
                            <div class="ff-summary-header">
                                <h4 class="mb-0">
                                    <i class="fas fa-receipt me-2"></i>Tóm tắt đơn hàng
                                </h4>
                            </div>
                            
                            <div class="ff-summary-body">
                                <div class="ff-summary-item">
                                    <span>Tạm tính (@Model.Count() món):</span>
                                    <span>@totalPrice.ToString("N0")đ</span>
                                </div>
                                <div class="ff-summary-item">
                                    <span>Phí vận chuyển:</span>
                                    <span class="text-success">Miễn phí</span>
                                </div>
                                <div class="ff-summary-divider"></div>
                                <div class="ff-summary-total">
                                    <span>Tổng cộng:</span>
                                    <span class="ff-total-price">@totalPrice.ToString("N0")đ</span>
                                </div>
                            </div>
                            
                            <div class="ff-summary-footer">
                                <a href="/checkout" class="ff-btn-primary w-100 mb-3">
                                    <i class="fas fa-credit-card me-2"></i>TIẾN HÀNH THANH TOÁN
                                </a>
                                <a href="/products" class="ff-btn-secondary w-100">
                                    <i class="fas fa-plus me-2"></i>Thêm món ăn
                                </a>
                            </div>
                        </div>
                        
                        <div class="ff-cart-promo">
                            <div class="ff-promo-header">
                                <i class="fas fa-gift me-2"></i>Mã giảm giá
                            </div>
                            <div class="ff-promo-body">
                                <div class="input-group">
                                    <input type="text" class="form-control ff-promo-input" placeholder="Nhập mã giảm giá...">
                                    <button class="ff-btn-promo" type="button">Áp dụng</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- FastFood Cart Content End -->

    @await Html.PartialAsync("~/Views/Client/Layout/_Footer.cshtml")

    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top">
        <i class="fa fa-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/client/lib/easing/easing.min.js"></script>
    <script src="~/client/lib/waypoints/waypoints.min.js"></script>
    <script src="~/client/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/client/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/client/js/main.js"></script>
    <!-- Cart JavaScript -->
    <script src="~/client/js/cart.js"></script>
</body>
</html>

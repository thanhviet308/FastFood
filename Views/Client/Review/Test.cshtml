@{
    ViewData["Title"] = "Test Reviews - Debug";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Reviews Debug Information</h1>
        
        <div class="card mb-4">
            <div class="card-header">
                <h5>Database Statistics</h5>
            </div>
            <div class="card-body">
                <p><strong>Total Reviews in Database:</strong> @ViewBag.TotalReviews</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Sample Reviews (First 5)</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.SampleReviews != null)
                {
                    foreach (var review in ViewBag.SampleReviews)
                    {
                        <div class="border-bottom pb-2 mb-2">
                            <p><strong>ID:</strong> @review.Id</p>
                            <p><strong>Rating:</strong> @review.Rating</p>
                            <p><strong>Content:</strong> @review.Content</p>
                            <p><strong>UserName:</strong> @review.UserName</p>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No sample reviews available</p>
                }
            </div>
        </div>

        <div class="mt-4">
            <a href="/reviews" class="btn btn-primary">Back to Reviews Page</a>
        </div>
    </div>
</body>
</html>